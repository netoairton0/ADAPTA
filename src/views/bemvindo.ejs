<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADAPTA</title>
    <link rel="stylesheet" href="../styles/bemvindo.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <header>
        <div>
            <div id="divHeader">
                <div id="divHeader">
                    <a href="/"><p class="headerText">Bem-vindo</p></a>
                </div>
                <div id="divHeader">
                    <div class="divHeader">
                        <button id="increaseFont">A+</button>
                        <button id="decreaseFont">A-</button>
                    </div>
                    <button id="toggleTheme">
                        <span id="themeIcon" class="material-icons">light_mode</span>
                    </button>
                </div>
            </div>
        </div>
    </header>

    <main>
        <div id="divBotoes">
            <button class="botaoAdaptar" onclick="window.location.href='adaptar?type=image'">
                <span class="material-icons iconButton">image</span>
                <span class="textButton">Adaptar<br>imagem</span>
            </button>
            <button class="botaoAdaptar" onclick="window.location.href='adaptar?type=audio'">
                <span class="material-icons iconButton">volume_up</span>
                <span class="textButton">Adaptar<br>audio</span>
            </button>
            <button class="botaoAdaptar" onclick="window.location.href='adaptar?type=text'">
                <span class="material-icons iconButton">text_format</span>
                <span class="textButton">Adaptar<br>texto</span>
            </button>
        </div>

        <% if (userType === 'researcher') { %>
            <div id="historyContainer">
                <h2>Histórico de Uploads</h2>
                <ul>
                    <% history.forEach(entry => { %>
                        <li>
                            <p>Arquivo: <%= entry.filename %></p>
                            <% if (entry.outputType === 'image') { %>
                                <div class="downloadButton">
                                    <a href="../../generated/example-image.jpg" download="example-image.jpg">Baixar Imagem</a>
                                </div>
                            <% } else if (entry.outputType === 'audio') { %>
                                <div class="downloadButton">
                                    <a href="../../generated/example-audio.wav" download="example-audio.mp3">Baixar Áudio</a>
                                </div>
                            <% } else if (entry.outputType === 'text') { %>
                                <div class="downloadButton">
                                    <a href="../../generated/example-text.txt" download="example-text.txt">Baixar Texto</a>
                                </div>
                            <% } %>
                        </li>
                    <% }) %>
                </ul>
            </div>
        <% } %>
    </main>

    <script src="../javascript/theme.js"></script>
    <script src="../javascript/fonts.js"></script>
    <script src="../javascript/bemvindo.js"></script>
</body>
</html>